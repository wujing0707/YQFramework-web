<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>sipcredit_bus</display-name>
	<welcome-file-list>
		<welcome-file>/login.jsp</welcome-file>
	</welcome-file-list>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring/spring-*.xml</param-value>
	</context-param>
	<context-param>
		<param-name>sessionUsername</param-name>
		<param-value>SESSION_USERNAME</param-value>
	</context-param>
	<context-param>
		<param-name>sessionUserId</param-name>
		<param-value>SESSION_USERID</param-value>
	</context-param>
	<context-param>
		<param-name>sessionUrls</param-name>
		<param-value>SESSION_URLS</param-value>
	</context-param>
	<context-param>
		<param-name>privilegeSessionName</param-name>
		<param-value>SESSION_PRIVILEGES</param-value>
	</context-param>
	<context-param>
		<param-name>sessionDataaccessIds</param-name>
		<param-value>SESSION_DATAACCESS</param-value>
	</context-param>
	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>security</filter-name>
		<filter-class>com.wa.framework.filter.SecurityFilter</filter-class>
		<init-param>
			<param-name>redirectUrl</param-name>
			<param-value>/system/user/toLogin.action</param-value>
		</init-param>
		<init-param>
			<param-name>prohibiteUrl</param-name>
			<param-value>prohibite.html</param-value>
		</init-param>
		<init-param>
			<param-name>exceptUrls</param-name>
			<param-value>/system/user/toLogin.action,/system/user/login.action,/complain/editComplain.action,/complain/queryComplains.action,
			 /complain/saveComplain.action,/complain/uploadFile.action,/complain/viewComplain.action,/complain/removeFile.action,/creditInfo/toFocusGroupInfo.action,/enterpriseanalysis/toEnterpriseanalysis.action,
			 /enterpriseanalysis/enterpriseanalysisChat.action,/complain/applyedComplains.action,
			 /creditVerification/creditBaseVerification.action,/creditVerification/tocreditVerification.action,/creditVerification/getCreditBaseVerificationList.action,
			 /creditVerification/getDetailVerificationInfo.action,/creditVerification/getSelfDetailVerificationInfo.action,/creditVerification/toCreateCheckCode.action,/creditVerification/toCreatePDF.action,
			 /creditVerification/togroupsCreditVerification.action,/creditVerification/togroupsCreateCheckCode.action,/creditVerification/togroupsCreatePDF.action,/creditVerification/getgroupsCreditBaseVerificationList.action,
			 /creditVerification/getgroupsDetailVerificationInfo.action,/creditVerification/getgroupsSelfDetailVerificationInfo.action,/creditVerification/groupscreditCreateCheckCode.action,/creditVerification/exportgroupsVerificationInfoPdf.action
			 /creditVerification/creditcreateCheckCode.action,/creditVerification/creditsaveCheckCode.action,/creditVerification/exportVerificationInfoPdf.action,creditInfo/creditBaseInfoSearch.action,/creditVerification/creditgroupsSaveCheckCode.action,
			 /creditArchives/exportFocusGroupsInfoPdf.action,/creditArchives/toFocusGroupsInfo.action,/creditArchives/creditGroupsBaseVerification.action,/creditArchives/toInfoclass.action,
			 /creditArchives/getFocusGroupsInfoList.action,/creditArchives/getAllZylx.action,/creditArchives/getFocusGroupsDetail.action,/system/guijixx/getDepartment.action,/creditVerification/creditgroupsSaveCheckCode.action,/creditInfo/getQyztList.action,/creditInfo/getZclxList.action,
			 /creditInfo/getXzqhList.action,/creditInfo/getCreditBaseInGJZ.action,/complain/downloadFile.action,/complain/downloadFileT.action
			 </param-value>

		</init-param>
	</filter>
	<filter>
		<filter-name>accessLog</filter-name>
		<filter-class>com.wa.framework.log.AccessLogFilter</filter-class>
		<init-param>
			<param-name>includePrefix</param-name>
			<param-value>/system/user,/system/role</param-value>
		</init-param>
		<init-param>
			<param-name>excludePrefix</param-name>
			<param-value>/system/log</param-value>
		</init-param>
		<init-param>
			<param-name>includeSuffix</param-name>
			<param-value>action</param-value>
		</init-param>
		<init-param>
			<param-name>excludeSuffix</param-name>
			<param-value></param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>security</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>accessLog</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
 
	<filter>
		<filter-name>commonFilter</filter-name>
		<filter-class>com.wa.framework.filter.CommonFilter</filter-class>	
	</filter>
	<filter-mapping>
		<filter-name>commonFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
	 
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.wa.framework.web.SpringContext</listener-class>
	</listener>
	<listener>
		<listener-class>com.wa.framework.data.listener.MyTimerListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>springMvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring/spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springMvc</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
	
	  	<!--jaxws 配置 -->  
  	<servlet>
  	<servlet-name>ws</servlet-name>
  	<servlet-class>
  		com.sun.xml.ws.transport.http.servlet.WSSpringServlet
  	</servlet-class>
  	<load-on-startup>2</load-on-startup>
  	</servlet>  	
  	<servlet-mapping>
  	<servlet-name>ws</servlet-name>
  	<url-pattern>/CreditCountInfoPort</url-pattern>
  	</servlet-mapping>

	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/403.jsp</location>
	</error-page>
	
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	
</web-app>