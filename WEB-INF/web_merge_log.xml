    <filter>
        <filter-name>accessLog</filter-name>
        <filter-class>com.wa.framework.log.AccessLogFilter</filter-class>
        <init-param>
            <param-name>includePrefix</param-name>
            <param-value>/system/user,/system/role</param-value>
        </init-param>
        <init-param>
            <param-name>excludePrefix</param-name>
            <param-value>/system/log</param-value>
        </init-param>
        <init-param>
            <param-name>includeSuffix</param-name>
            <param-value>action</param-value>
        </init-param>
        <init-param>
            <param-name>excludeSuffix</param-name>
            <param-value></param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>accessLog</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>